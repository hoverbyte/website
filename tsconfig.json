{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "Node",
    "sourceMap": true,
    "rootDirs": ["src"],
    "outDir": "lib",
    "noEmitOnError": true,
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "jsx": "react"
  },
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents"
  }
}
